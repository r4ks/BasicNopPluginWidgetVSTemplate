{
    "$schema": "https://json.schemastore.org/template",
    "author": "Ricks",
    "classifications": ["Console"],
    "identity": "ricks.dev.console.generator",
    "name": "Basic Nop Plugin With Widget",
    "shortName": "basic-nop",
    "tags": {
        "type": "project",
        "languague": "C#"
    },
    "sourceName": "Nop.Plugin.Widgets.HumanResource",
    "defaultName": "Nop.Plugin.Widgets.SuperPlugin",
    "preferNameDirectory": false,
    "symbols": {
        "Framework": {
            "type": "parameter",
            "description": "The target framework for the project",
            "datatype": "choice",
            "choices": [
                {
                    "choice": "net6.0",
                    "description": "Target .net 6"
                },
                {
                    "choice": "net7.0",
                    "description": "Target .net 7"
                }
            ],
            "replaces": "net6.0",
            "defaultValue": "net6.0"

        },
        "rootFolder": {
            "type": "generated",
            "generator": "join",
            "parameters": {
                "symbols": [
                    {
                        "type": "const",
                        "value": "Nop"
                    },
                    {
                        "type": "const",
                        "value": "Plugin"
                    },
                    {
                        "type": "const",
                        "value": "Widgets"
                    },
                    {
                        "type": "ref",
                        "value": "name"
                    }
                ],
                "separator": "."
            },
            "fileRename": "Nop.Plugin.Widgets.HumanResource"
        },
        "module": {
            "replaces": "HumanResource",
            "fileRename": "HumanResource",
            "isRequired": true,
            "type":"parameter",
            "datatype": "text",
            "defaultValue": "SuperModule",
            "description": "Main Module Name for the Entity On the Plugin. No Spaces and CamelCase please!"
        },
        "entity": {
            "replaces": "Employee",
            "fileRename": "Employee",
            "isRequired": true,
            "type":"parameter",
            "datatype": "text",
            "defaultValue": "SuperTable",
            "description": "Main Entity Name On the Plugin."
        },
        "entityDerivativesLower": {
            "type": "generated",
            "generator": "casing",
            "parameters": {
                "source": "entity",
                "toLower": true
            },
            "replaces": "employee"
        },
        "lowerNameSpace": {
            "type": "generated",
            "generator": "casing",
            "parameters": {
                "source": "sourceName",
                "toLower": true
            },
            "replaces": "humanResources"
        },
        "replaceMenuItemLabel": {
            "type": "generated",
            "generator": "coalesce",
            "parameters": {
                "sourceVariableName": "sourceName",
                "fallbackVariableName": "defaultName"
            },
            "replaces": "Human Resource"
        }
    },
    "forms": {
        "kebapCase": {
            "identifier": "kebabCase"
        },
        "camelCase": {
            "identifier": "firstUpperCase"
        }
    }
}